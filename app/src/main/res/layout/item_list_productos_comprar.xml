<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvProductosComprar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/blanco1"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagenProdAgri"
            android:layout_width="378dp"
            android:layout_height="180dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/idNombreProdAgri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="PLATANO"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/simbolo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="S/"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idPrecioAgri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="5dp"
                android:text="48.90"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/simbolo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/idCretrioAgri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textSize="20sp" />




        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/agric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="AGRICULTOR:"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/idNombreAgri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="PEDRO GOMEZ"
            android:textSize="20sp"
            android:textStyle="bold" />



    </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>

