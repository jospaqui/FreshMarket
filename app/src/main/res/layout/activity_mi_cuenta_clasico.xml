<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiCuentaClasicoActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="140dp"
        android:background="@drawable/comp_bg"
        tools:layout_editor_absoluteY="116dp">

        <include layout="@layout/toolbar"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="222dp">


            <ImageView
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:src="@drawable/perfil"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@color/blanco1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:paddingTop="7dp"
                android:paddingRight="5dp"
                android:text="NOMBRE:"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/idnombre_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="JUAN"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blanco2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginStart="40dp"
                android:paddingTop="7dp"
                android:paddingRight="5dp"
                android:text="APELLIDO:"

                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="right"/>


            <TextView
                android:id="@+id/idapellido_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="left"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:fontFamily="sans-serif"
                android:text="GOMEZ"
                android:textSize="17sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blanco3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginStart="40dp"
                android:paddingTop="7dp"
                android:paddingRight="5dp"
                android:text="DNI:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="right"/>


            <TextView
                android:id="@+id/idDNI_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="left"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:fontFamily="sans-serif"
                android:text="70586921"
                android:textSize="17sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blanco4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fecha_nac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginStart="40dp"
                android:paddingTop="7dp"
                android:paddingRight="5dp"
                android:text="FECHA NACIMIENTO:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="right"/>


            <TextView
                android:id="@+id/idFecha_Nac_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="left"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:fontFamily="sans-serif"
                android:text="10/20/2014"
                android:textSize="17sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/blanco5"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginStart="40dp"
                android:paddingTop="7dp"
                android:paddingRight="5dp"
                android:text="CELULAR:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="right"/>



            <TextView
                android:id="@+id/idCelular_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="left"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:fontFamily="sans-serif"
                android:text="987654321"
                android:textSize="17sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blanco6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginStart="40dp"
                android:paddingTop="7dp"
                android:paddingRight="5dp"
                android:text="CORREO:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="right"/>


            <TextView
                android:id="@+id/idCorreo_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="left"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"

                android:fontFamily="sans-serif"
                android:text="juan@gmail.com"
                android:textSize="17sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blanco7"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginStart="40dp"
                android:paddingTop="7dp"
                android:paddingRight="5dp"
                android:text="FECHA REGISTRO:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="right"/>


            <TextView
                android:id="@+id/idfechaReg_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:fontFamily="sans-serif"
                android:text="17/08/2021 14:02:00"
                android:textSize="17sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_editar_perfil_cla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_main"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="EDITAR"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>